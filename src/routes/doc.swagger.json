          {
            "name": "body",
            "in": "body",
            "description": "Realiza o login no sistema.",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "usuario@email.com"
                },
                "password": {
                  "type": "string",
                  "example": "senha123"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
