      "get": {
        "tags": [
          "Produto"
        ],
        "description": "Exibe a imagem do produto",
        "parameters": [
          {
            "name": "imagem",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Requer o path da imagem"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
