    "/produtos/": {
      "post": {
        "tags": [
          "Produto"
        ],
        "description": "Cadastra um novo produto",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "imagem",
            "in": "formData",
            "type": "file",
            "required": true,
            "description": "Imagem do produto"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Dados do produto",
            "schema": {
              "type": "object",
              "properties": {
                "descricao_produto": {
                  "type": "string",
                  "example": "Novo Produto"
                },
                "preco_unitario": {
                  "type": "string",
                  "example": "12"
                },
                "categoria": {
                  "type": "string",
                  "example": "informatica"
                },
                "qtde_estoque": {
                  "type": "string",
                  "example": "41"
                }
              },
              "required": [
                "descricao_produto",
                "preco_unitario",
                "categoria",
                "qtde_estoque"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Produto"
        ],
        "description": "Exibe todos os produtos cadastrados",
        "responses": {
