                },
                "sexo": {
                  "type": "string",
                  "example": "masculino"
                },
                "data_nascimento": {
                  "type": "string",
                  "example": "1999-07-25"
                },
                "email": {
                  "type": "string",
                  "example": "usuario@email.com"
                },
                "password": {
                  "type": "string",
                  "example": "senha123456"
                }
              },
              "required": [
                "nome",
                "cpf",
                "sexo",
                "data_nascimento",
                "email",
                "password"
              ]
            }
          }
