                },
                "email": {
                  "type": "string",
                  "example": "usuario@email.com"
                },
                "password": {
                  "type": "string",
                  "example": "senha123456"
                }
              },
              "required": [
                "nome",
                "cpf",
                "sexo",
                "data_nascimento",
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
