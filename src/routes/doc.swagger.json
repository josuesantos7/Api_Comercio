        ],
        "description": "Atualiza produto selecionado",
        "parameters": [
          {
            "name": "id_produto",
            "in": "path",
            "required": true,
            "type": "number",
            "description": "Selecionar o Id do produto"
          },
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
